  <% case @operation %>
    <% when "add" %>
      <%= @num1.to_i + @num2.to_i %>
    <% when "subtract" %>
      <%= @num1.to_i - @num2.to_i %>
    <% when "multiply" %>
      <%= @num1.to_i * @num2.to_i %>
    <% when "divide" %>
      <%= @num1.to_i / @num2.to_i %>
    <% else %>
      <%= "yerrrrrrrrrr" %>
    <% end %>
