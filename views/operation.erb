

<!DOCTYPE html>

<html>

<body>
  <% @operation = "ham" %>
  <% case @operation %>
    <% when "add" %>
      <p><%= "#{@num1 + @num2}" %></p>
    <% when "subtract" %>
      <p><%= "#{@num1 - @num2}" %></p>
    <% when "multiply" %>
      <p><%= "#{@num1 * @num2}" %></p>
    <% when "divide" %>
      <p><%= "#{@num1 / @num2}" %></p>
    <% else %>
      <p>yerrrrrrrrrr</p>
  <% end %>

</body>

</html>
